<?xml version="1.0"?>
<ruleset name="My Project Rules" xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd"
         xsi:noNamespaceSchemaLocation="http://pmd.sourceforge.net/ruleset_2_0_0.xsd">

    <description>Java code rules</description>

    <!--Basic-->
    <rule ref="category/java/bestpractices.xml/AccessorClassGeneration" message="---" />  <!--No usar string.valueof solo usar valueof-->
    <rule ref="category/java/codestyle.xml/UnnecessaryImport"/> <!--Imports un used, create conflict in program-->
    <rule ref="category/java/codestyle.xml/ShortMethodName"/> <!--Not use short name method min 5 char-->
    <rule ref="category/java/bestpractices.xml/ForLoopCanBeForeach"/> <!--Use foreach not use for-->
    <rule ref="category/java/codestyle.xml/ShortClassName"/>  <!--No tener nombres de clase cortos-->
    <rule ref="category/java/performance.xml/UselessStringValueOf"/> <!--No usar string.valueof solo usar valueof-->
    <rule ref="category/java/performance.xml/StringToString"/> <!--Evitar hacer toString de un string-->
    <rule ref="category/java/errorprone.xml/UseEqualsToCompareStrings"/> <!--Usar equals en lugar de == para comparar strings-->
    <rule ref="category/java/errorprone.xml/SimpleDateFormatNeedsLocale"/> <!--Especificare una configuracion regional al crear una fecha-->
    <!-- <rule ref="category/java/performance.xml/AvoidInstantiatingObjectsInLoops"/> No crear objetos dentro de bucles -->
    
    
</ruleset>