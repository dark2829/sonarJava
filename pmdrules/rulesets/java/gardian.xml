<?xml version="1.0"?>
<ruleset name="Java Code Rules" xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd">

    <description>Java code rules</description>

    <rule ref='rulesets/java/strings.xml'/>
    <rule ref='rulesets/java/basic.xml'/>    
    <rule ref='rulesets/java/imports.xml'/>    
    <rule ref='rulesets/java/logging-java.xml'/>    
    <rule ref='rulesets/java/empty.xml'/>    
    <rule name="LoggingRule" language="java" message="Logging statement found" class="net.sourceforge.pmd.lang.rule.XPathRule">

    <description>
        This rule detects the presence of log statements in Java code.
    </description>

    <priority>1</priority>

    <properties>
        <property name="xpath">
            <value>
                //PrimaryPrefix/Name[
                    starts-with(@Image, 'log.') or
                    @Image='log.debug' or
                    @Image='log.info' or
                    @Image='log.error'
                ]
            </value>
        </property>
    </properties>

    <example>
        <![CDATA[
        // Bad: Logging statement found
        log.info("This is a log message");
        
        // Good: No logging statement
        int x = 5;
        ]]>
    </example>

</rule>

    
</ruleset>