<?xml version="1.0"?>
<ruleset name="Java Code Rules" xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd">

    <description>Java code rules</description>

    <rule ref='rulesets/java/strings.xml'/>
    <rule ref='rulesets/java/basic.xml'/>
    <rule name="NoLoggingRule"
          language="java"
          message="No logging statements found"
          class="net.sourceforge.pmd.lang.rule.XPathRule">

        <description>
            This rule detects the absence of log statements in Java code.
        </description>

        <priority>1</priority>

        <properties>
            <property name="xpath">
                <value>
                    //StatementExpression/PrimaryExpression/PrimaryPrefix/Name[@Image='Log']
                </value>
            </property>
        </properties>

        <example>
            <![CDATA[
            // Bad: Logging statement found
            Log.info("This is a log message");
            
            // Good: No logging statement
            int x = 5;
            ]]>
        </example>

    </rule>

</ruleset>