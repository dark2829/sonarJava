<?xml version="1.0"?>

<ruleset name="LogPresenceRule" xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd"
         xsi:noNamespaceSchemaLocation="http://pmd.sourceforge.net/ruleset_2_0_0.xsd">

    <description>
        Custom PMD rule to detect presence of log statements in Java code.
    </description>

    <rule name="LogPresenceRule"
          language="java"
          message="Logging statement found"
          class="net.sourceforge.pmd.lang.rule.XPathRule">

        <description>
            This rule detects the presence of log statements in Java code.
        </description>

        <priority>1</priority>

        <properties>
            <property name="xpath">
                <value>
                    //StatementExpression/PrimaryExpression/PrimaryPrefix/Name[@Image='Log']
                </value>
            </property>
        </properties>

    </rule>

</ruleset>
